<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Uplodar', root_url, :class => 'brand' %>
      <div class="nav-collapse">
        <ul class="nav">
        </ul>
        <%= content_tag 'ul', :class => 'nav pull-right' do %>
          <% if user_signed_in? %>
            <% if current_user.is_admin? %>
              <li><%= link_to "Shares", shares_path %></li>
              <li><%= link_to "Events", events_path %></li>
              <li><%= link_to "Users", main_app.users_path %></li>
            <% end -%>
            <%= content_tag 'li', :class => 'dropdown' do %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.send Uplodar.display_user_name %> <b class="caret"></b></a>
              <%= content_tag 'ul', :class => 'dropdown-menu' do %>
                <%= content_tag('li') do %>
                  <%=  link_to('Sign Out', main_app.destroy_user_session_path, :method => :delete) %>
                <% end -%>
              <% end -%>
            <% end -%>
        <%else %>
          <%= content_tag('li'){link_to "Sign In", new_user_session_path} %>
        <% end -%>
      <% end -%>
      </div>
    </div>
  </div>
</div>
