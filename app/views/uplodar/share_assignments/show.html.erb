<div class="page-header">
  <h2>Permissions for <%= @user.send Uplodar.display_user_name %> on "<%= @share.name %>"</h2>
</div>

<div class="row">
<%= simple_form_for(@assignment, :url => user_share_path(@user, @assignment), :html => { :class => 'form-horizontal'}) do |f| %>

  <div class="span12">
    <legend>Permissions:</legend>
    <%= f.input :write %>
  </div>

  <div class="span12">
    <div class="form-actions">
      <%= f.submit 'Update user\' s permissions', :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to 'Cancel', user_shares_path(@user), :class => 'btn' %>
      </div>
    </div>
  </div>

<% end %>
</div>
