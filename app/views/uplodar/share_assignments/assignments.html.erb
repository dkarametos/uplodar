<div class="page-header">
  <h1>Assign share</h1>
</div>

<div class="row">
<%= simple_form_for(@user, :url => assign_user_shares_path(@user), :html => { :class => 'form-horizontal'}) do |f| %>

  <div class="span6">
    <dl class="dl-horizontal">
      <dt><strong><%= Uplodar.display_user_name %></strong></dt>
      <dd><%= @user.send Uplodar.display_user_name %></dd>
    </dl>
  </div>

  <div class="span6">
    <legend>Shares</legend>
    <%= f.association :shares, :as => :check_boxes, :label => false %>
  </div>

  <div class="span12">
    <div class="form-actions">
      <%= f.submit 'Update user\' s shares', :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to 'Cancel', user_shares_path(@user), :class => 'btn' %>
      </div>
    </div>
  </div>

<% end %>
</div>
