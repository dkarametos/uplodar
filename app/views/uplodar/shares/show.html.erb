<%- model_class = Uplodar::Share -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%=link_to @share.name, browser_path(:share => @share.name) %></dd>
  <dt><strong>Path:</strong></dt>
  <dd><%= @share.path %></dd>
  <dt><strong>URL:</strong></dt>
  <dd><%= @share.url %></dd>
</dl>

<div class="form-actions">  
  <%= link_to "Edit", edit_share_path(@share), :class => 'btn btn-primary' %>
  <div class="pull-right">
    <%= link_to "Cancel",  shares_path, :class => 'btn'  %>
  </div>
</div>
