<div class="page-header">
  <h1>User Info</h1>
</div>

<div class="row">
  <div class="span6">
    <dl class="dl-horizontal">
      <dt><strong><%= Uplodar.display_user_name %></strong></dt>
      <dd><%= @user.send Uplodar.display_user_name %></dd>
    </dl>
  </div>
  <div class="span6">
    <%= simple_form_for(@user, :url => permissions_path, :html => { :class => 'form-horizontal'}) do |f| %>
      <legend>Shares</legend>
    <%= f.association :shares, :as => :check_boxes, :label => false %>
  </div>
  <div class="span12">
    <div class="form-actions">
      <%= f.submit 'Update user\' s permissions', :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to 'Cancel', permissions_path, :class => 'btn' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
