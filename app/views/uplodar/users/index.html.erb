<div class="page-header">
  <h1>Users</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Uplodar.display_user_name %></th>
      <th>Shares</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
    <td><%= user.send Uplodar.display_user_name %></td>
    <td>
      <%= user.cached_shares.blank? ? 'No shares assigned' : user.cached_shares %>
      <span class="pull-right">
        <%= link_to 'Details', user_path(user), :class => 'btn btn-primary btn-mini' %>
      </span>
    </td>
  </tr>
<% end %>
  </tbody>
</table>
